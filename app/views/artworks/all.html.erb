<div class ="all-view">
  <%= form_tag(all_artworks_path, method: "get") do %>
        <%= label_tag(:address, "Where") %>
        <%= text_field_tag(:address) %>
        <%= select_tag(:art_type, options_for_select(Artwork::ARTTYPE)) %>
        <%= select_tag(:size, options_for_select(Artwork::ARTSIZE)) %>
        <%= select_tag(:category, options_for_select(Artwork::ARTCATEGORY)) %>
        <%= submit_tag("Search") %>
      <% end %>
</div>
<div class="map-content">
      <div class="map-cards">
  <% @artworks.each do |artwork| %>
  <%= link_to artwork_path(artwork) do%>
    <div class="card-result">
    <div class="inner-div" style="background: url(<%= cl_image_path artwork.photo %>) center">
    </div>
  </div>

    <div class="infos-card-ind">
      <h3 class="artwork-artist"><strong><%= artwork.title %></strong></h3>
      <h5><%= artwork.price %>â‚¬</h5>
      </div>
      <h4 class="artwork-title"><em><%= artwork.title %></em>, <%= artwork.art_date %></h4>
  <%end%>
  <%end%>

</div>


      <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
</div>










