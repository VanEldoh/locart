<div class="add-artwork-img">
<div class="container-form">
  <div class="row justify-content-center">
      <div class="col-lg-10">
        <div class="form-model">
<h1><center>Add a new Artwork</center></h1>

<div class="banner">

  <div class="container-artwork">

<%= simple_form_for(@artwork) do |f| %>

  <div class="form-inputs">
    <%= f.input :title%>

    <%= f.input :size, collection: Artwork::ARTSIZE %>
    <%= f.input :art_type, collection: Artwork::ARTTYPE %>
    <%= f.input :category, collection: Artwork::ARTCATEGORY %>
    <%= f.input :price %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit my artwork", class: "btnsign-inverse"  %>
  </div>
<% end %>
 </div>
</div>
</div>
</div>
</div>
</div>
</div>
