<h2>A confirmer</h2>

<section class="section">
  <div class="container">
    <% @booking_requests.each do |booking| %>
      <div class="row card-booking py-3 mb-3">
        <figure class="underline col-sm-4">
          <img src="https://storage.gra1.cloud.ovh.net/v1/AUTH_10e1a9235c63431c95e5b84a247830db/prod/exhibition/8129_1_s.jpg" class="w100" alt="Bethany Harper Williams - Oeuvres récentes">
          <figcaption><%= booking.artwork.title %></figcaption>
        </figure>
        <div id="content" class="col-sm-8">
          <h3><a href="">Locataire</a></h3>
            <!-- TODO Mettre avatar du locataire-->
          <img src="" width="48pt" class="rounded-circle" alt="">
          <p class="date">
            <i class="far fa-calendar"></i>
            <span class=""><strong><%= booking.start_date %> to <%= booking.end_date %></strong></span>
          </p>

          <p class="name"><strong><%= booking.artwork.price %>€</strong></p>
          <br><br><br><br>
          <p class="name"><%= booking.artwork.size %></p>
          <p class="name"><%= booking.artwork.art_type %></p>
          <p class="name"><%= booking.artwork.category %></p>
          <p class="name"><%= booking.artwork.art_date %></p>
          <button type="button" class="btn btn-primary">ok</button>
          <!-- en JS ok = checked tick -->
          <button type="button" class="btn btn-danger">cancel</button>
        </div>
      </div>
    <% end %>
  </div>
</section>


